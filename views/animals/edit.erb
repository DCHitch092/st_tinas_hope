<div class="edit_form">
  <form class="animals" action="/animals/<%= @animal.id %>" method="post">
    <label for="animal_name">Name:</label>
    <input type="text" id="animal_name" name="animal_name" value="<%= @animal.animal_name %>">
    <label for="type">Type:</label>
    <input type="text" id="type" name="type" value="<%= @animal.type %>">
    <label for="date-of-birth">D/O/B:</label>
    <input type="date" id="date-of-birth" name="date_of_birth" value="<%= @animal.date_of_birth %>">
    <label for="fav-colour">Favourite Colour:</label>
    <input type="color" id="fav-colour" name="fav_colour" value="<%= @animal.fav_colour %>">
    <label for="age">Age:</label>
    <input type="text" id="age" name="age" value="<%= @animal.age %>">

    <button type="submit" name="animals">Update Animal</button>
</form>

    <form class="assign-human" action="/human-assign/<%= @animal.id %>/assign-human" method="post">
      <select id="human-id" name="human_id" selected="<%= @animal.human_id %>">
        <% for human in @humans %>
          <% if human.id == @animal.human_id.to_i %>
            <option value="<%= human.id %>" selected><%= human.human_name %></option>
          <% else %>
            <option value="<%= human.id %>"> <%= human.human_name %></option>
          <% end %>
        <% end %>
      </select>

      <button type="submit" name="button">Assign Human</button>
    </form>

  <hr>
</div>
