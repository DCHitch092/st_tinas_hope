<div class="edit_form">
  <form class="animals" action="/animals" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= @animal['name'] %>">
    <label for="type">Type:</label>
    <input type="text" id="type" name="type" value="<%= @animal['type'] %>">
    <label for="date-of-birth">D/O/B:</label>
    <input type="date" id="date-of-birth" name="date_of_birth" value="<%= @animal['date_of_birth'] %>">
    <label for="fav-colour">Favourite Colour:</label>
    <input type="text" id="fav-colour" name="fav_colour" value="<%= @animal['fav_colour'] %>">
    <label for="age">Age:</label>
    <input type="text" id="age" name="age" value="<%= @animal['age'] %>">

    <button type="submit" name="animals">Add Animal</button>
</form>

</div>
