
<form class="animals" action="/animals" method="post">

  <div class="new_form">

    <div class="two-column-left">

      <div class="label-left">
        <label for="animal-name">Name:</label>
        <input type="text" id="name" name="animal_name" value="">
      </div>

      <div class="label-left">
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="">
      </div>

      <div class="label-left">
        <label for="date-of-birth">D/O/B:</label>
        <input type="date" id="date-of-birth" name="date_of_birth">
      </div>

      <div class="label-left">
        <label for="fav-colour">Favourite Colour:</label>
        <input type="color" id="fav-colour" name="fav_colour" value="">
      </div>

      <div class="label-left">
        <label for="age">Age:</label>
        <input type="text" id="age" name="age" value="">
      </div>

    </div>

    <div class="two-column-right">

      <div class="label-top">

        <label for="human-id">Current Human:</label>
        <select id="human-id" name="human_id">
          <% for human in @humans %>
          <option value="<%= human.id %>"><%= human.human_name %></option>
          <% end %>
        </select>

      </div>

    <div class="label-top">

      <label for="vet-id">Current Vet:</label>
      <select id="vet-id" name="vet_id" selected="
      <% unassigned = Vet.find_unassigned() %>
      <%= unassigned.id %>">
        <% for vet in @vets %>
          <% if vet.id == unassigned.id %>
            <option value="<%= vet.id %>" selected ><%= vet.vet_name %></option>
          <% else %>
            <option value="<%= vet.id %>"><%= vet.vet_name %></option>
          <% end %>
        <% end %>
      </select>

    </div>

  </div>

</div>
  <div class="span">
    <button class="button" type="submit" name="animals">Add Animal</button>
  </div>



</form>
