

<div class="flex-columns">

  <h1>Humans</h1>

  <table>
    <thead>
      <th>Name</th>
      <th colspan="3">Contact Details</th>
      <th>Favourite Colour</th>
      <th>Edit</th>
      <th>Delete</th>
    </thead>

    <% table_count = 0 %>
    <%for human in @humans %>
      <% if human.human_name != "Stray" %>
        <tr class="<% table_count += 1 %><%= "even" if table_count.even? %><%= "odd" if table_count.odd? %>">
          <td>
            <a href="/humans/<%= human.id %>">
              <h3><%= human.human_name %></h3>
            </a>
          </td>

          <td>
            <p><%= human.address %></p>
          </td>

          <td>
            <p><%= human.email %></p>
          </td>

          <td>
            <p><%= human.phone %></p>
          </td>

          <td style="color:#fff; opacity:0.4; background-color:<%= human.fav_colour %>">
            <p><%= human.fav_colour %></p>
          </td>

          <td>
            <a class="table-button button"href="/humans/<%= human.id %>/edit">edit</a>
          </td>
          <td>
            <form action="/humans/<%= human.id %>/delete" method="post">
              <button class="table-button button"type="submit" name="button">Delete</button>
            </form>
          </td>
        </tr>
        <% end %>
      <% end %>
  </table>

  <div class="span" id="human-add">
    <a href="/humans/new" class="button">Add New Human</a>

  </div>

</div>
